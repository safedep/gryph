{
  "name": "Package Installation Detected",
  "type": "monitor",
  "monitor_type": "query_level_monitor",
  "enabled": true,
  "schedule": {
    "period": {
      "interval": 5,
      "unit": "MINUTES"
    }
  },
  "inputs": [
    {
      "search": {
        "indices": ["gryph-events-*"],
        "query": {
          "size": 5,
          "query": {
            "bool": {
              "must": [
                { "term": { "action_type": "command_exec" } },
                { "range": { "timestamp": { "gte": "now-5m" } } }
              ],
              "should": [
                { "wildcard": { "payload.command.keyword": "*npm install*" } },
                { "wildcard": { "payload.command.keyword": "*yarn add*" } },
                { "wildcard": { "payload.command.keyword": "*pnpm add*" } },
                { "wildcard": { "payload.command.keyword": "*pip install*" } },
                { "wildcard": { "payload.command.keyword": "*poetry add*" } },
                { "wildcard": { "payload.command.keyword": "*cargo add*" } },
                { "wildcard": { "payload.command.keyword": "*go get*" } },
                { "wildcard": { "payload.command.keyword": "*gem install*" } }
              ],
              "minimum_should_match": 1
            }
          }
        }
      }
    }
  ],
  "triggers": [
    {
      "name": "package_install_detected",
      "severity": "2",
      "condition": {
        "script": {
          "source": "ctx.results[0].hits.total.value > 0",
          "lang": "painless"
        }
      },
      "actions": []
    }
  ]
}
